{
  "name": "wpshiftstudio/pay-in-3-for-woocommerce",
  "description": "Allows customers to pay for their order in three installments.",
  "type": "wordpress-plugin",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "WpShiftStudio\\PayIn3ForWC\\": "src/"
    }
  },
  "authors": [
    {
      "name": "Dilip Raghavan",
      "email": "dilip@wpshiftstudio.com"
    }
  ],
  "require-dev": {
    "phpunit/phpunit": "^11.5",
    "phpstan/phpstan": "^2.1",
    "squizlabs/php_codesniffer": "^3.7.2",
    "wp-coding-standards/wpcs": "^3.0",
    "szepeviktor/phpstan-wordpress": "2.0",
    "php-stubs/wordpress-stubs": "6.6.2",
    "php-stubs/woocommerce-stubs": "10.2"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
